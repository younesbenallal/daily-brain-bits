{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "tsconfig*.json", "vite.config.*", "tsup.config.*", "tailwind.config.*", "postcss.config.*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**", "index.js", "index.js.map"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"inputs": ["$TURBO_DEFAULT$", "biome.json", ".biome.json", ".eslintrc*", "eslint.config.*", "tsconfig*.json"]
		},
		"type-check": {
			"dependsOn": ["^type-check"],
			"inputs": ["$TURBO_DEFAULT$", "tsconfig*.json"]
		},
		"test": {
			"dependsOn": ["^test"],
			"inputs": ["$TURBO_DEFAULT$", "tsconfig*.json"],
			"outputs": ["coverage/**", "test-results/**"]
		},
		"format": {
			"cache": false,
			"inputs": ["$TURBO_DEFAULT$", "biome.json", ".biome.json", ".prettierrc*", "prettier.config.*"]
		},
		"clean": {
			"cache": false
		},
		"db:push": {
			"cache": false
		},
		"db:push:prod": {
			"cache": false
		}
	}
}
