{
	"name": "daily-brain-bits",
	"version": "0.0.0",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*",
			"packages/integrations/*"
		],
		"catalog": {
			"@orpc/client": "^1.13.4",
			"@orpc/server": "^1.13.4",
			"@types/bun": "^1.3.6",
			"@types/react": "^19.2.8",
			"better-auth": "^1.4.14",
			"drizzle-orm": "^0.45.1",
			"react": "^19.2.3",
			"react-dom": "^19.2.3",
			"zod": "^4.3.5"
		}
	},
	"scripts": {
		"dev": "turbo run dev",
		"build": "turbo run build",
		"lint": "turbo run lint",
		"type-check": "turbo run type-check",
		"test": "turbo run test",
		"cf:deploy:front": "bun --filter @daily-brain-bits/front run cf:deploy",
		"cf:deploy:back": "bun --filter @daily-brain-bits/back run cf:deploy",
		"cf:deploy": "bun run cf:deploy:back && bun run cf:deploy:front",
		"clean": "turbo run clean",
		"db:push": "turbo run db:push --filter=@daily-brain-bits/db",
		"db:push:prod": "turbo run db:push:prod --filter=@daily-brain-bits/db",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@trigger.dev/build": "4.3.3",
		"@types/bun": "catalog:",
		"husky": "^9.1.7",
		"turbo": "^2.7.5",
		"typescript": "^5.6.0"
	},
	"packageManager": "bun@1.3.6",
	"engines": {
		"bun": ">=1.3.6"
	},
	"dependencies": {
		"@trigger.dev/sdk": "4.3.3",
		"zod": "catalog:"
	}
}
