{
  "name": "daily-brain-bits",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/integrations/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "db:push": "turbo run db:push --filter=@daily-brain-bits/db",
    "db:push:prod": "turbo run db:push:prod --filter=@daily-brain-bits/db"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "^1.3.5",
    "turbo": "^2.0.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "bun@1.1.0",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "zod": "^4.3.5"
  }
}
