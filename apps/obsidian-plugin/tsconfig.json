{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./",
		"rootDir": "./src",
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
